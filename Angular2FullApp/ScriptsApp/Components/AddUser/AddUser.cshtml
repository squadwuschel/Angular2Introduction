@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <h2 [hidden]="!isEditMode">User bearbeiten (Model driven form)</h2>
        <h2 [hidden]="isEditMode">Add a User (Model driven form)</h2>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
</div>
<form #frm="ngForm" (ngSubmit)="save()">
    <div class="row">
        <div class="col-md-12 ">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-10">
                            <strong>User</strong>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Name*</label>
                                <div class="col-md-6">
                                    <input [(ngModel)]="user.name" #name="ngForm" required type="text" ngControl="name" class="form-control input-sm">
                                    <span *ngIf="name.touched && name.errors"> 
                                        <label *ngIf="name.errors?.required" class="control-label text-danger small">
                                            Bitte einen Namen eingeben
                                        </label>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Email*</label> 
                                <div class="col-md-6">
                                    <input [(ngModel)]="user.email" #email="ngForm" validateEmail required type="text"  class="form-control input-sm">
                                    <span *ngIf="email.touched && email.errors">
                                        <label *ngIf="email.errors?.required" class="control-label text-danger small">
                                            Bitte eine Email eingeben
                                        </label>
                                        <label *ngIf="email.errors?.valideEmail" class="control-label text-danger small">
                                            Bitte eine valide Email eingeben
                                        </label>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Phone</label>
                                <div class="col-md-6">
                                    <input [(ngModel)]="user.phone" #phone="ngForm" type="text" class="form-control input-sm">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-10">
                            <strong>Address</strong>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
                <div ngControlGroup="address" class="panel-body">
                    <div class="row">
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Street</label>
                                <div class="col-md-6">
                                    <input [(ngModel)]="user.address.street"  #street="ngForm" type="text" class="form-control input-sm">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Suite</label>
                                <div class="col-md-6">
                                    <input [(ngModel)]="user.address.suite" #suite="ngForm" type="text" class="form-control input-sm">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <label class="col-md-2 control-label">City</label>
                                <div class="col-md-6">
                                    <input [(ngModel)]="user.address.city" #city="ngForm" type="text" class="form-control input-sm">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 form-horizontal">
                            <div class="form-group">
                                <label class="col-md-2 control-label">ZipCode</label>
                                <div class="col-md-6">
                                    <input [(ngModel)]="user.address.zipcode" #zipCode="ngForm" type="text" class="form-control input-sm">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" [disabled]="isFormValide()" class="btn btn-primary">Speichern</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{user | json}}
        </div>
    </div>
</form>
