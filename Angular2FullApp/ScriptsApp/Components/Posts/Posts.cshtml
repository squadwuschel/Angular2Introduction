@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <h2>Posts</h2>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <loading-spinner [visible]="isLoading"></loading-spinner>
        <ul class="list-group">
            <li *ngFor="let row of posts" class="list-group-item">{{row.title}}</li>
        </ul>
    </div>
    <div class="col-md-6"></div>
</div>

